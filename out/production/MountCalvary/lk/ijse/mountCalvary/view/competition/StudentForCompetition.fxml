<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="acStudentForCompetition" styleClass="main-frame"
      xmlns="http://javafx.com/javafx/8.0.141"
      fx:controller="lk.ijse.mountCalvary.controller.competition.StudentForCompetition_controller">
    <children>
        <Label prefHeight="42.0" prefWidth="409.0" styleClass="title" text="Student for competition">
            <font>
                <Font name="Arial Bold" size="18.0"/>
            </font>
        </Label>
        <JFXComboBox fx:id="cboxCompetition" labelFloat="true" onAction="#cboxCompetition_onAction" prefHeight="25.0"
                     prefWidth="519.0" promptText="Competition" VBox.vgrow="ALWAYS"/>
        <TableView fx:id="tblEventInCompetition" onMouseClicked="#tblEventInCompetition_mouseClicked"
                   tableMenuButtonVisible="true" prefHeight="172.0" prefWidth="1301.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colActivity_tblEventInCompetition" prefWidth="75.0" text="Activity"/>
                <TableColumn fx:id="colEvent_tblEventInCompetition" prefWidth="75.0" text="Event"/>
                <TableColumn fx:id="colGender_tblEventInCompetition" prefWidth="75.0" text="Gender"/>
                <TableColumn fx:id="colAgeGroup_tblEventInCompetition" prefWidth="75.0" text="Age group"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <HBox styleClass="node-pane" VBox.vgrow="ALWAYS">
            <children>
                <JFXTextField fx:id="txtEvent" editable="false" labelFloat="true" onAction="#txtEvent_onAction"
                              prefHeight="25.0" prefWidth="390.0" promptText="Event" HBox.hgrow="ALWAYS"/>
                <JFXTextField fx:id="txtGender" editable="false" labelFloat="true" onAction="#txtGender_onAction"
                              prefHeight="25.0" prefWidth="492.0" promptText="Gender" HBox.hgrow="ALWAYS"/>
                <JFXTextField fx:id="txtAgeGroup" editable="false" labelFloat="true" onAction="#txtAgeGroup_onAction"
                              prefHeight="25.0" prefWidth="327.0" promptText="Age group" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" styleClass="node-pane">
            <children>
                <Label prefHeight="42.0" prefWidth="409.0" styleClass="sub-title" text="Student for competition">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                </Label>
                <JFXButton fx:id="btViewStudentList" onAction="#btViewStudentList_onAction" prefHeight="33.0"
                           prefWidth="216.0" text="View student list for this activity" textFill="#2196f3"
                           visible="false">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </JFXButton>
            </children>
        </HBox>
        <HBox styleClass="node-pane">
            <children>
                <JFXTextField fx:id="txtStudentID" editable="false" labelFloat="true" onAction="#txtStudentID_onAction"
                              prefHeight="25.0" prefWidth="124.0" promptText="Student ID" HBox.hgrow="ALWAYS"/>
                <JFXTextField fx:id="txtAge" editable="false" labelFloat="true" onAction="#txtAge_onAction"
                              prefHeight="25.0" prefWidth="178.0" promptText="Age " HBox.hgrow="ALWAYS"/>
                <JFXTextField fx:id="txtStudentName" labelFloat="true" onAction="#txtStudentName_onAction"
                              prefHeight="25.0" prefWidth="587.0" promptText="Student name" HBox.hgrow="ALWAYS"/>
                <JFXComboBox fx:id="cboxResult" editable="true" labelFloat="true" onAction="#cboxResult_onAction"
                             prefHeight="25.0" prefWidth="327.0" promptText="Result" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <HBox styleClass="node-pane">
            <children>
                <JFXTextField fx:id="txtPerformance" labelFloat="true" onAction="#txtPerformance_onAction"
                              prefHeight="25.0" prefWidth="1038.0" promptText="Perfomence" HBox.hgrow="ALWAYS"/>
                <JFXButton fx:id="btAddStudent" onAction="#btAddStudent_onAction" prefHeight="33.0" prefWidth="124.0"
                           style="-fx-background-color: #2196F3;" text="Add" textFill="WHITE"/>
            </children>
        </HBox>
        <VBox styleClass="table-pane">
            <children>
                <JFXButton fx:id="btRemove_tblStudentList" onAction="#btRemove_tblStudentList_onAction"
                           prefHeight="25.0"
                           prefWidth="124.0" styleClass="cancel" text="Remove" textFill="#2196f3">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </JFXButton>
                <TableView fx:id="tblStudentList" prefHeight="300.0" prefWidth="1301.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colEvent_tblStudentLIst" prefWidth="247.5" text="Event"/>
                        <TableColumn fx:id="colStudent_tblStudentLIst" prefWidth="292.125" text="Student"/>
                        <TableColumn fx:id="colResult_tblStudentLIst" prefWidth="348.34375" text="Result"/>
                        <TableColumn fx:id="colPerformance_tblStudentList" prefWidth="252.0" text="Performance"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
        <HBox styleClass="button-pane">
            <children>
                <JFXButton fx:id="btCancel" onAction="#btCancel" prefHeight="33.0" prefWidth="124.0" styleClass="cancel"
                           text="Cancel" textFill="#2196f3">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </JFXButton>
                <JFXButton fx:id="btFinish" onAction="#btFinish_onAction" prefHeight="33.0" prefWidth="124.0"
                           style="-fx-background-color: #2196F3;" text="Submit" textFill="WHITE"/>
            </children>
        </HBox>
    </children>
    <stylesheets>
        <URL value="@../../css/frame.css"/>
        <URL value="@../../css/combo-box.css"/>
        <URL value="@../../css/table-view.css"/>
        <URL value="@../../css/text-and-password-field.css"/>
        <URL value="@../../css/date-picker.css"/>
        <URL value="@../../css/radio-button.css"/>
        <URL value="@../../css/text-area.css"/>
        <URL value="@../../css/button.css"/>
        <URL value="@../../css/label.css"/>
    </stylesheets>
</VBox>
