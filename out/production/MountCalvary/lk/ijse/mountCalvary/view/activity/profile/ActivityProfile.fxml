<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTabPane?>
<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="ActivityProfile" styleClass="profile-main-frame" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.mountCalvary.controller.activity.profile.ActivityProfileController">
   <top>
      <HBox fx:id="bpActivityProfileTop" styleClass="top-profile-frame">
         <children>
            <Label maxWidth="1.7976931348623157E308" minWidth="0.0" styleClass="super-title" text="Activity Profile" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <JFXComboBox fx:id="cboxActivity" labelFloat="true" onAction="#cboxActivity_onAction" prefHeight="25.0" prefWidth="429.0" promptText="Activity" />
            <JFXButton fx:id="btSearch" onAction="#btSearch_onAction" prefHeight="34.0" prefWidth="116.0" style="-fx-background-color: #2196F3;" text="Search" textFill="WHITE" />
         </children>
      </HBox>
   </top>
   <center>
      <JFXTabPane minHeight="549.0" prefHeight="549.0" prefWidth="470.0" rotateGraphic="true" stylesheets="@../../../css/frame.css" BorderPane.alignment="CENTER">
         <Tab closable="false" text="Activity Details">
         <content>
            <fx:include fx:id="activityDetail" source="ActivityDetail.fxml" />
         </content>

      </Tab>
         <Tab closable="false" text="Attendant Sheet">
            <fx:include fx:id="attendantSheet" source="AttendantSheet.fxml" />
         </Tab>
         <Tab closable="false" text="Joined student">
            <content>
               <fx:include fx:id="joinedStudent" source="JoinedStudent.fxml" />
            </content>
         </Tab>
         <Tab closable="false" text="Event and competition">
            <content>
               <fx:include fx:id="eventAndCompetitionOfActivity" source="EventAndCompetitionOfActivity.fxml" />
            </content>
         </Tab>
         <Tab closable="false" text="Payment">
            <content>
               <fx:include fx:id="activityPayment" source="ActivityPayment.fxml" />
            </content>
         </Tab>
      </JFXTabPane>
   </center>
   <stylesheets>
      <URL value="@../../../css/frame.css" />
      <URL value="@../../../css/combo-box.css" />
      <URL value="@../../../css/table-view.css" />
      <URL value="@../../../css/text-and-password-field.css" />
      <URL value="@../../../css/date-picker.css" />
      <URL value="@../../../css/radio-button.css" />
      <URL value="@../../../css/text-area.css" />
      <URL value="@../../../css/button.css" />
      <URL value="@../../../css/label.css" />
      <URL value="@../../../css/tab-pane.css" />
   </stylesheets>
</BorderPane>
