<VBox fx:id="acNewActivity" prefHeight="782.0" prefWidth="1439.0" spacing="20.0" styleClass="main-frame" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.mountCalvary.controller.activity.NewActivity_controller">
    <children>
        <Label prefHeight="42.0" prefWidth="209.0" styleClass="title" text="New Activity">
            <font>
                <Font name="Arial Bold" size="18.0" />
            </font>
            <padding>
                <Insets bottom="10.0" right="10.0" top="10.0" />
            </padding>
        </Label>
        <JFXTextField fx:id="txtActivityName" labelFloat="true" onAction="#txtActivityName_onAction" prefHeight="25.0" prefWidth="667.0" promptText="Activity Name" />
        <JFXComboBox fx:id="cboxTeacher" labelFloat="true" onAction="#cboxTeacher_onAction" prefHeight="25.0" prefWidth="684.0" promptText="Teacher in charge" />
        <Label prefHeight="42.0" prefWidth="209.0" styleClass="sub-title" text="Initial Student">
            <font>
                <Font name="Arial Bold" size="18.0" />
            </font>
        </Label>
        <HBox styleClass="node-pane" VBox.vgrow="ALWAYS">
            <children>
                <JFXTextField fx:id="txtStudentID" labelFloat="true" onAction="#txtStudentID_onAction" prefHeight="25.0" prefWidth="151.0" promptText="Student ID" HBox.hgrow="ALWAYS" />
                <JFXTextField fx:id="txtStudentName" labelFloat="true" onAction="#txtStudentName_onAction" prefHeight="25.0" prefWidth="599.0" promptText="Student name" HBox.hgrow="ALWAYS" />
                <JFXDatePicker fx:id="dtJoinedDate" onAction="#dtJoinedDate_onAction" prefHeight="25.0" prefWidth="290.0" promptText="Joined date" HBox.hgrow="NEVER" />
                <JFXButton fx:id="btAdd_Student" onAction="#btAdd_Student_onAction" prefHeight="33.0" prefWidth="124.0" style="-fx-background-color: #2196F3;" text="Add" textFill="WHITE" />
            </children>
        </HBox>
        <VBox prefHeight="215.0" prefWidth="1200.0" styleClass="table-pane" VBox.vgrow="ALWAYS">
            <children>
                <JFXButton fx:id="btRemove_tblStudentList" onAction="#btRemove_tblStudentList_onAction" prefHeight="8.0" prefWidth="124.0" styleClass="cancel" text="Remove" textFill="#2196f3">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </JFXButton>
                <TableView fx:id="tblStudentList" prefHeight="213.0" prefWidth="1250.0" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colStudentName" prefWidth="785.0" text="Student Name" />
                        <TableColumn fx:id="colJoinedDate" prefWidth="456.0" text="Joined date" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
        <Label prefHeight="22.0" prefWidth="209.0" styleClass="sub-title" text="Initial Event">
            <font>
                <Font name="Arial Bold" size="18.0" />
            </font>
            <padding>
                <Insets bottom="10.0" right="10.0" top="10.0" />
            </padding>
        </Label>
        <JFXTextField fx:id="txtEventName" labelFloat="true" onAction="#txtEventName_onAction" prefHeight="25.0" prefWidth="657.0" promptText="Event Name" />
        <HBox alignment="CENTER_LEFT" prefHeight="33.0" prefWidth="657.0" VBox.vgrow="ALWAYS">
            <children>
                <Label prefHeight="17.0" prefWidth="136.0" text="Event Gender" HBox.hgrow="ALWAYS" />
            <JFXCheckBox fx:id="ckxMale" prefWidth="146.0" selected="true" text="Male" />
            <JFXCheckBox fx:id="ckxFemale" selected="true" text="Female" />
            <JFXCheckBox fx:id="ckxMix" selected="true" text="Mix" />
                <JFXButton fx:id="btAdd_Event" onAction="#btAdd_Event_onAction" prefHeight="33.0" prefWidth="124.0" style="-fx-background-color: #2196F3;" text="Add" textFill="WHITE" />
            </children>
        </HBox>
        <VBox prefHeight="222.0" prefWidth="1239.0" styleClass="table-pane" VBox.vgrow="ALWAYS">
            <children>
                <JFXButton fx:id="btRemove_tblEvent" onAction="#btRemove_tblEvent_onAction" prefHeight="17.0" prefWidth="124.0" styleClass="cancel" text="Remove" textFill="#2196f3">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </JFXButton>
                <TableView fx:id="tblEvent" prefHeight="108.0" prefWidth="1249.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colEventName" prefWidth="582.3333740234375" text="Event Name" />
                        <TableColumn fx:id="colGender" prefWidth="237.0" text="Gender" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
        <HBox styleClass="button-pane">
            <children>
                <JFXButton fx:id="btCancel" cancelButton="true" onAction="#btCancel_onAction" prefHeight="40.0" prefWidth="124.0" styleClass="cancel" text="Cancel" textFill="#2196f3">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </JFXButton>
                <JFXButton fx:id="btFinish" onAction="#btFinish_onAction" prefHeight="38.0" prefWidth="124.0" style="-fx-background-color: #2196F3;" text="Submit" textFill="WHITE" />
            </children>
        </HBox>
    </children>
    <stylesheets>
        <URL value="@../../css/frame.css" />
        <URL value="@../../css/button.css" />
        <URL value="@../../css/combo-box.css" />
        <URL value="@../../css/table-view.css" />
        <URL value="@../../css/text-and-password-field.css" />
        <URL value="@../../css/date-picker.css" />
        <URL value="@../../css/radio-button.css" />
        <URL value="@../../css/check-box.css" />
        <URL value="@../../css/text-area.css" />
        <URL value="@../../css/label.css" />
    </stylesheets>
    <padding>
        <Insets left="100.0" right="100.0" />
    </padding>

</VBox>
