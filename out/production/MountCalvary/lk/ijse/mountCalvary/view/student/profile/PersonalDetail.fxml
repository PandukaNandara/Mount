<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.icons525.Icons525View?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="personalDetail" styleClass="profile-frame"
      xmlns="http://javafx.com/javafx/8.0.141"
      fx:controller="lk.ijse.mountCalvary.controller.student.profile.PersonalDetailController">
    <children>
        <HBox VBox.vgrow="NEVER">
            <children>
                <Label maxWidth="1.7976931348623157E308" prefHeight="36.0" prefWidth="309.0" styleClass="title"
                       text="Personal Details" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <JFXButton fx:id="btPrint" alignment="CENTER" buttonType="RAISED" onAction="#btPrint_onAction"
                           prefHeight="45.0" prefWidth="108.0" ripplerFill="WHITE"
                           style="-fx-background-color: #2196f3;" text="Print" textAlignment="CENTER" textFill="WHITE">
                    <graphic>
                        <Icons525View fill="WHITE" glyphName="PRINTER" size="25" wrappingWidth="37.0"/>
                    </graphic>
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </JFXButton>
            </children>
        </HBox>
        <HBox styleClass="node-pane" VBox.vgrow="NEVER">
            <children>
                <JFXTextField fx:id="txtStudentID" editable="false" labelFloat="true" prefHeight="30.0"
                              prefWidth="162.0" promptText="Student ID"/>
                <JFXTextField fx:id="txtStudentName" editable="false" labelFloat="true"
                              maxWidth="1.7976931348623157E308" prefHeight="29.0" prefWidth="921.0"
                              promptText="Student name" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <HBox styleClass="node-pane" VBox.vgrow="NEVER">
            <children>
                <JFXTextField fx:id="txtHouse" editable="false" labelFloat="true" maxWidth="1.7976931348623157E308"
                              prefHeight="25.0" prefWidth="162.0" promptText="House"/>
                <Label prefWidth="143.0" text="Gender"/>
                <JFXRadioButton fx:id="rbFemale" text="Female">
                    <toggleGroup>
                        <ToggleGroup fx:id="gender"/>
                    </toggleGroup>
                </JFXRadioButton>
                <JFXRadioButton fx:id="rbMale" text="Male" toggleGroup="$gender"/>
            </children>
        </HBox>
        <HBox styleClass="node-pane" VBox.vgrow="NEVER">
            <children>
                <JFXTextField fx:id="txtGrade" editable="false" labelFloat="true" prefHeight="25.0" prefWidth="162.0"
                              promptText="Grade"/>
                <JFXTextField fx:id="txtClass" editable="false" labelFloat="true" prefHeight="25.0" prefWidth="174.0"
                              promptText="Class"/>
            </children>
        </HBox>
        <HBox VBox.vgrow="NEVER">
            <children>
                <JFXTextField fx:id="txtBirthDay" editable="false" labelFloat="true" prefHeight="25.0" prefWidth="355.0"
                              promptText="Birth day"/>
            </children>
        </HBox>
        <HBox styleClass="node-pane" VBox.vgrow="NEVER">
            <children>
                <JFXTextField fx:id="txtMotherName" editable="false" labelFloat="true" prefHeight="25.0"
                              prefWidth="615.0" promptText="Mother's name" HBox.hgrow="ALWAYS"/>
                <JFXTextField fx:id="txtFatherName" editable="false" labelFloat="true" prefHeight="25.0"
                              prefWidth="662.0" promptText="Father's name" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <TableView fx:id="tblTelNo" fixedCellSize="0.0" maxHeight="1.7976931348623157E308" prefHeight="149.0"
                   prefWidth="1200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colTelNo" prefWidth="820.0" text="Telephone Number" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <JFXTextField fx:id="txtAddress" editable="false" labelFloat="true" prefHeight="25.0" prefWidth="1322.0"
                      promptText="Address" VBox.vgrow="NEVER"/>
        <JFXTextArea fx:id="txtaDescStudent" editable="false" labelFloat="true" prefHeight="211.0" prefWidth="1200.0"
                     promptText="About this student" VBox.vgrow="ALWAYS"/>
    </children>
    <stylesheets>
        <URL value="@../../../css/frame.css"/>
        <URL value="@../../../css/combo-box.css"/>
        <URL value="@../../../css/table-view.css"/>
        <URL value="@../../../css/text-and-password-field.css"/>
        <URL value="@../../../css/date-picker.css"/>
        <URL value="@../../../css/radio-button.css"/>
        <URL value="@../../../css/text-area.css"/>
        <URL value="@../../../css/button.css"/>
        <URL value="@../../../css/label.css"/>
    </stylesheets>

</VBox>
